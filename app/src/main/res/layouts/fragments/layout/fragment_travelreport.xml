<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_travelreport"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize"
    tools:context=".activities.DashboardActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/tvlr_pick_datetime"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#88c9ec">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:background="@drawable/ripple_effect"
                android:id="@+id/tvlr_start_date"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/start_date_text"
                android:textColor="@color/black"/>
            <Button
                style="?android:attr/buttonStyleSmall"
                android:background="@drawable/ripple_effect"
                android:id="@+id/tvlr_end_date"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/start_date_text"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/tvlr_applyChangeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/gradient_one"
                android:textColor="@color/white"
                android:shadowColor="#585757"
                android:layout_weight="1"
                android:text="@string/apply"/>
        </LinearLayout>

        <android.support.v7.widget.SearchView
            android:id="@+id/tvlr_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvlr_pick_datetime"
            android:singleLine="true"/>

        <ListView
            android:id="@+id/tvlr_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tvlr_search"
            android:divider="#b5b5b5"
            android:nestedScrollingEnabled="true"
            android:dividerHeight="1dp"
            android:listSelector="@drawable/list_selector" />

        <TextView
            android:id="@+id/text_no_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tvlr_search"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/text_no_report"
            android:textSize="@dimen/textNoRecordSize"
            android:textColor="@color/black"
            android:visibility="gone"
            />
    </RelativeLayout>

</android.support.v4.widget.SwipeRefreshLayout>
