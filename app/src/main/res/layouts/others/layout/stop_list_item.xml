<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="stop list card">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="-5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stop_count"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/stop_marker"
                android:text="10"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/white"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_weight="10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/start_stoptime"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/default_last_updated"
                    android:textSize="@dimen/datetime_text"
                    android:textColor="#10bcc9"
                    android:textStyle="bold"/>

                <!--Datetime-->
                <ImageView
                    android:id="@+id/duration_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="6dp"
                    android:layout_toStartOf="@id/stopDuration"
                    android:layout_marginEnd="5dp"
                    app:srcCompat="@drawable/ic_access_time_black_24dp"/>
                <TextView
                    android:id="@+id/stopDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:text="@string/default_duration"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/end_stoptime"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@id/start_stoptime"
                    android:gravity="end"
                    android:text="@string/default_last_updated"
                    android:layout_marginEnd="5dp"
                    android:textSize="@dimen/datetime_text"
                    android:textColor="@color/dormant_color"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/location_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/start_stoptime"
                    android:textColor="#343434"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@id/thumbnail"
                    android:text="@string/default_location" />

                <TextView
                    android:id="@+id/dist_trip_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/location_info"
                    android:textStyle="italic"
                    android:textSize="15sp"
                    android:textColor="#9D81CF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/location_info"
                    android:layout_alignBottom="@id/dist_trip_start"
                    android:layout_toEndOf="@id/dist_trip_start"
                    android:textStyle="italic"
                    android:textSize="15sp"
                    android:text="@string/trip_start_dist_text"/>
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>