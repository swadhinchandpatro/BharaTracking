<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="cards main container">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="-5dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/notificationIcon"
                android:tag="image_tag"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:src="@drawable/error"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/vehicle_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_vehicle_no"
                    android:textColor="#040404"
                    android:typeface="sans"
                    android:textSize="20dip"
                    android:textStyle="bold"/>

                <!--Datetime-->
                <TextView
                    android:id="@+id/updated_time"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/vehicle_no"
                    android:layout_marginEnd="5dp"
                    android:layout_alignParentEnd="true"
                    android:gravity="right"
                    android:text="@string/default_last_updated"
                    android:textSize="12dip"
                    android:textColor="#10bcc9"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/location_info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vehicle_no"
                    android:textColor="#343434"
                    android:textSize="13dip"
                    android:layout_marginTop="1dip"
                    android:text="@string/default_location" />
                <!--information-->
                <TextView
                    android:id="@+id/notificationMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/location_info"
                    android:textColor="#343434"
                    android:textSize="12dip"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/default_ignition"
                    android:textStyle="italic"/>
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>