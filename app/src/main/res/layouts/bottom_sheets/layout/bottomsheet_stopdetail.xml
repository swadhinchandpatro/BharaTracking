<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottom_sheet_stop_detail"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bottomsheet_dark"
    android:orientation="vertical"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:behavior_hideable="true"
    app:behavior_peekHeight="60dp"
    tools:showIn="@layout/activity_route">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/bottomsheet_dark"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/location_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:paddingStart="35dp"
            android:paddingEnd="20dp"
            android:text="@string/default_location"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/show_prev_stop_btn"
            app:layout_constraintEnd_toStartOf="@id/show_next_stop_btn"/>

        <ImageView
            android:id="@+id/show_prev_stop_btn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_up" />

        <ImageView
            android:id="@+id/show_next_stop_btn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_up" />

    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/time_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/hourglass"/>
        <TextView
            android:id="@+id/stop_start_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/time_icon"
            android:layout_alignParentStart="true"
            android:text="@string/stop_start"
            android:textColor="@color/running_bg"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/stop_end_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/time_icon"
            android:layout_alignParentEnd="true"
            android:text="@string/stop_end"
            android:textColor="@color/running_bg"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/stop_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stop_start_label"
            android:text="@string/start_date_text"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:fontFamily="sans-serif-light"/>
        <TextView
            android:id="@+id/stop_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stop_end_label"
            android:layout_alignParentEnd="true"
            android:text="@string/start_date_text"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:fontFamily="sans-serif-light"/>
        <ImageView
            android:id="@+id/odom_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time_icon"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/odometer" />
        <TextView
            android:id="@+id/trip_start_dist_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/odom_icon"
            android:layout_alignParentStart="true"
            android:text="@string/trip_start_dist_text"
            android:textColor="@color/running_bg"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/last_stop_dist_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/odom_icon"
            android:layout_alignParentEnd="true"
            android:text="@string/last_stop_dist_text"
            android:textColor="@color/running_bg"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/trip_start_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trip_start_dist_label"
            android:text="0 km"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:fontFamily="sans-serif-light"/>
        <TextView
            android:id="@+id/last_stop_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/last_stop_dist_label"
            android:layout_alignParentEnd="true"
            android:text="0 km"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:fontFamily="sans-serif-light"/>
    </RelativeLayout>


</LinearLayout>