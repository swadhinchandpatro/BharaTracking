<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:tools="http://schemas.android.com/tools"
    app:behavior_hideable="true"
    tools:showIn="@layout/activity_maps"
    app:layout_behavior="@string/bottom_sheet_behavior">


    <LinearLayout
        android:id="@+id/info_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/location_info"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="7"
            android:background="#bdd7f9"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:text="Not Available"
            android:textColor="@color/black"
            android:textSize="@dimen/location_text" />
        <ImageButton
            android:id="@+id/closeSheet"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#bdd7f9"
            app:srcCompat="@drawable/ic_close_white_35dp"/>
    </LinearLayout>
    <View
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/info_window"
        android:background="@color/white_greyish" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/call_driver_btn"
            style="?android:attr/buttonStyleSmall"
            android:background="@drawable/ripple_effect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="25dp"
            android:drawableStart="@drawable/ic_call"
            android:paddingEnd="1dp"
            android:text="@string/call_driver"
            android:textColor="@color/vehicle_no_color"/>

        <Button
            android:id="@+id/show_route_btn"
            style="?android:attr/buttonStyleSmall"
            android:background="@drawable/ripple_effect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="25dp"
            android:drawableStart="@drawable/route_32"
            android:paddingEnd="1dp"
            android:text="SHOW ROUTE"
            android:textColor="@color/vehicle_no_color"/>

        <!--<ImageButton-->
            <!--style="?android:attr/buttonStyleSmall"-->
            <!--android:background="@drawable/ripple_effect"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:padding="5dp"-->
            <!--app:srcCompat="@drawable/ic_share_white_35dp"/>-->

    </LinearLayout>

</RelativeLayout>